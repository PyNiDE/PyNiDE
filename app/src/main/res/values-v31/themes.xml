        <item name="android:colorPrimary">#527da3</item>
        <item name="android:alertDialogTheme">@style/Theme.PyNiDE.Dark.Dialog.Alert</item>
        <item name="android:colorControlActivated">#808080</item>
        <item name="android:textColorHighlight">#60808080</item>
        <item name="android:datePickerStyle">@style/Theme.PyNiDE.DatePicker</item>
        <item name="android:datePickerDialogTheme">@style/Theme.PyNiDE.Dark.Dialog.Alert</item>
        <item name="android:timePickerStyle">@style/Theme.PyNiDE.TimePicker</item>
