        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.PyNiDE.Dark" parent="Theme.AppCompat.DayNight">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:itemTextAppearance">@style/ActionBar.Transparent.PyNiDE.Item</item>
        <item name="android:listViewStyle">@style/Theme.PyNiDE.ListView</item>
        <item name="android:actionBarItemBackground">@drawable/bar_selector_style</item>
